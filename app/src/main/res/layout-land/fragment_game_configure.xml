<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameConfigureFragment"
    android:background="@drawable/background_landscape">



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/numberOfPlayers"
        android:hint="Number of players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/player1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        app:hintTextColor="@color/black"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/outlined_text_view"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/numberOfPlayersEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/player1"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Player 1 name"

        app:layout_constraintTop_toBottomOf="@id/numberOfPlayers"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/player2"

        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/player1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/player2"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Player 2 name"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintLeft_toRightOf="@id/player1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfPlayers"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/player2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/player3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Player 3 name"

        app:layout_constraintTop_toBottomOf="@id/player1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/player4"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/player3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/player4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Player 4 name"

        app:layout_constraintTop_toBottomOf="@id/player2"
        app:layout_constraintLeft_toRightOf="@id/player3"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/player4TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton

        android:width="200sp"
        android:height="65sp"
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15sp"
        app:cornerRadius="16sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>