        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/centar"
            android:layout_width="255sp"
            android:layout_height="255sp"
            app:layout_constraintTop_toBottomOf="@id/gore"
            app:layout_constraintBottom_toTopOf="@id/dole"
            app:layout_constraintLeft_toRightOf="@id/levo"
            app:layout_constraintRight_toLeftOf="@id/desno"

            android:orientation="horizontal" >

