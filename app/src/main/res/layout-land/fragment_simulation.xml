    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320sp"
        android:layout_height="340sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/topLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/endTurnRollDiceButton"
            android:layout_width="150sp"
            android:layout_height="65sp"
            android:text="End Turn"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/roundedbutton"
            />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_marginBottom="20sp"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toTopOf="@+id/endTurnRollDiceButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/playerLabel"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/person24" />


            <TextView
                android:id="@+id/playerNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textSize="18sp"
                android:layout_marginLeft="10sp"
                />

